<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.yshlapak.sunshine.DetailActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="100°"
        android:id="@+id/maxTemp"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="100°"
        android:id="@+id/minTemp"
        android:layout_below="@+id/maxTemp"
        android:layout_alignLeft="@+id/maxTemp"
        android:layout_alignStart="@+id/maxTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Clear"
        android:id="@+id/weatherDescription"
        android:layout_alignBottom="@+id/minTemp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Day"
        android:id="@+id/day"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/maxTemp"
        android:layout_alignStart="@+id/maxTemp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Date"
        android:id="@+id/date"
        android:layout_below="@+id/day"
        android:layout_alignLeft="@+id/day"
        android:layout_alignStart="@+id/day" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ALL"
        android:textSize="30dp"
        android:id="@+id/allData"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/maxTemp"
        android:layout_toEndOf="@+id/maxTemp"
        android:layout_marginBottom="136dp" />


</RelativeLayout>
